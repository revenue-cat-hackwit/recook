{
  "expo": {
    "name": "Pirinku",
    "slug": "pirinku",
    "scheme": "pirinku",
    "version": "1.0.0",
    "experiments": {
      "tsconfigPaths": true
    },
    "plugins": [
      "expo-router",
      "@react-native-google-signin/google-signin",
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "Izinkan Pirinku mengakses mikrofon untuk mendikte resep dan bertanya pada Chef Bot.",
          "speechRecognitionPermission": "Izinkan Pirinku mengenali suara Anda untuk pengalaman memasak yang lebih mudah.",
          "androidSpeechServicePackages": ["com.google.android.googlequicksearchbox"]
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/VisbyCF-Regular.otf",
            "./assets/fonts/VisbyCF-Medium.otf",
            "./assets/fonts/VisbyCF-DemiBold.otf"
          ],
          "android": {
            "fonts": [
              {
                "fontFamily": "VisbyCF-Regular",
                "fontDefinitions": [{ "path": "./assets/fonts/VisbyCF-Regular.otf", "weight": 400 }]
              },
              {
                "fontFamily": "VisbyCF-Medium",
                "fontDefinitions": [{ "path": "./assets/fonts/VisbyCF-Medium.otf", "weight": 500 }]
              },
              {
                "fontFamily": "VisbyCF-DemiBold",
                "fontDefinitions": [
                  { "path": "./assets/fonts/VisbyCF-DemiBold.otf", "weight": 600 }
                ]
              }
            ]
          }
        }
      ]
    ],
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.hackwit.pirinku",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Izinkan Pirinku mengakses mikrofon untuk mendikte resep dan bertanya pada Chef Bot.",
        "NSSpeechRecognitionUsageDescription": "Izinkan Pirinku mengenali suara Anda untuk pengalaman memasak yang lebih mudah."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png"
      },
      "permissions": ["android.permission.RECORD_AUDIO"],
      "package": "com.hackwit.pirinku",
      "softwareKeyboardLayoutMode": "pan"
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "01fe9c61-ad2a-47d1-93ee-8f5a160633ac"
      }
    },
    "owner": "hackwit"
  }
}
